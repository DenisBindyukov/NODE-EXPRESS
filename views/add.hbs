<h1>Add new course</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Course name</label>
        <span class="helper-text" data-error="To enter some name"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1">
        <label for="price">Price</label>
        <span class="helper-text" data-error="To enter price"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required>
        <label for="img">Images</label>
        <span class="helper-text" data-error="To enter url image"></span>
    </div>

    <button class="btn btn-primary">Добавить курс</button>
</form>